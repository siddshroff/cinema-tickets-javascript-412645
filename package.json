  "license": "ISC",
  "scripts": {
    "dev": "nodemon --inspect=0.0.0.0:9234 app.js --ignore logs/",
    "pipeline": "npm run test && npm run security && npm run compliance",
    "test": "npm run test:unit && npm run test:coverage",
    "test:unit": "mocha --recursive test --exit",
    "test:coverage": "c8 node_modules/.bin/mocha --recursive test --exit",
    "security": "npm run security:lockfile && npm run security:audit && npm run security:outdated",
    "security:audit": "npm audit",
    "security:lockfile": "lockfile-lint --path package-lock.json --validate-https",
    "security:outdated": "npm outdated",
    "compliance": "npm run compliance:commits && npm run compliance:licenses && compliance:lint",
    "compliance:commits": "commitlint --from=master --to=HEAD",
    "compliance:licenses": "license-checker --failOn 'Unlicense;Public'",
    "compliance:lint": "eslint src test",
    "compliance:lint-fix": "eslint src test --fix"
  },
  "dependencies": {
    "prom-client": "^15.1.3",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "chai": "^6.0.1",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-config-airbnb-base":"^15.0.0",
    "globals": "^16.4.0",
    "license-checker": "^25.0.1",
    "lockfile-lint": "^4.14.0",
    "mocha": "^11.7.2",
    "nodemon": "3.1.10",
    "c8": "^10.1.2",
    "sinon": "21.0.0"
  }
}
